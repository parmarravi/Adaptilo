<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_light" />
            <corners
                android:radius="100dp"
                android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
        </shape>
    </item>
    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary" />
            <corners
                android:radius="100dp"
                android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp" />
        </shape>
    </item>
    <item
        android:bottom="16dp"
        android:right="16dp"
        android:left="16dp"
        android:top="16dp">
        <shape android:shape="oval">
            <solid android:color="@color/gray_light" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>

    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/gray_dark" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
</layer-list>