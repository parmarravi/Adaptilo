        <shape android:shape="rectangle">
            <solid android:color="@color/gray_light" />
            <corners
                android:radius="10dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
