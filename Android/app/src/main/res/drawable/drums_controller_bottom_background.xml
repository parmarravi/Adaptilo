    </item>
    <item android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary" />
            <corners
                android:radius="10dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>